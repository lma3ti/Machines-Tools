    "url": "<%= fullUrl %>",
    "logo": "/images/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+212-xxxx-xxxx",
      "contactType": "Customer Service",
      "areaServed": "MA",
      "availableLanguage": "en"
    },
    "sameAs": [
      "https://www.facebook.com/ouladabderrahman",
      "https://www.twitter.com/ouladabderrahman",
      "https://www.linkedin.com/company/ouladabderrahman"
    ]
  }
</script>
